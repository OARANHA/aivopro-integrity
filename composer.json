{
    "name": "28facil/integrity",
    "description": "28Fácil System Integrity Manager - Verificação de saúde e configuração da API",
    "keywords": [
        "28facil",
        "aivopro",
        "integrity",
        "health-check",
        "api-monitor"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AiVoPro\\Integrity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AiVoPro\\Integrity\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "28Fácil Team",
            "email": "contato@28facil.com.br"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8",
        "symfony/cache": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests --level=8",
        "phpcs": "phpcs --standard=PSR12 src tests",
        "analyse": [
            "@phpstan",
            "@phpcs",
            "@test"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}