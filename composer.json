{
    "name": "aivopro/integrity",
    "description": "AiVoPro System Integrity Manager - Verificação de saúde e configuração da API com suporte a JWT",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "integrity",
        "health-check",
        "28facil",
        "aivopro",
        "api-monitor",
        "jwt",
        "authentication"
    ],
    "authors": [
        {
            "name": "AiVoPro Team",
            "email": "contato@aivopro.com.br",
            "homepage": "https://aivopro.com.br"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "firebase/php-jwt": "^6.10",
        "guzzlehttp/guzzle": "^7.8",
        "iziphp/router": "^1.2",
        "psr/http-factory": "^1.0",
        "symfony/cache": "^6.0|^7.0",
        "symfony/http-client": "^6.0|^7.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "AiVoPro\\Integrity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AiVoPro\\Integrity\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "phpcs": "phpcs --standard=PSR12 src",
        "analyse": [
            "@phpstan",
            "@phpcs",
            "@test"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
